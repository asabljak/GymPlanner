<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tvz.gymplanner.training.SetTrainingNameDescriptionActivity">

    <TextView android:text="Naziv treninga:" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trainingFin_nazivLbl" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trainingFin_nazivInput"
        android:layout_below="@+id/trainingFin_nazivLbl"/>

    <TextView android:text="Opis treninga:" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trainingFin_opisLbl"
        android:layout_below="@+id/trainingFin_nazivInput"
        android:layout_marginTop="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trainingFin_opisInput"
        android:layout_below="@+id/trainingFin_nazivInput"
        android:lines="8"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kreiraj trening"
        android:id="@+id/trainingFin_bttn"
        android:layout_below="@+id/trainingFin_opisInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="kreirajTrening"
        android:layout_marginTop="40dp"/>


</RelativeLayout>
